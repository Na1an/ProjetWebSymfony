{% extends 'base.html.twig' %}

{% block title ' welcome! ' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1> Bienvenue sur mon pages </h1>
        <p>故国望神州　满眼风光北固楼</p>
    </div>

    <div class="container">
        <h2>Les restaurants quotidien </h2>
        <div class="row flex">

            {% for restaurant in restaurants %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('restaurant-list.show',{id: restaurant.id, slug: restaurant.slug} )}} "> {{ restaurant.name}}</a>
                            </h5>
                            
                            <h6 class="card-text"> Address : {{ restaurant.address}} </h6>
                            <h6 class="card-text"> Evaluation : {{ restaurant.evaluation}} </h6>
                            <div class="text-primary" style="font-weight: bold; font-size: 1rem;" > Average Price: {{restaurant.getFormattedPrice}} €</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}