{% extends 'base.html.twig' %}

{% block title ' welcome! ' %}

{% block body %}
    <div class="jumbotron text-center">
        <h1 > Bienvenue sur TrouverMonRestau !</h1>
        <div id="carousel" class="carousel slide m-auto" data-ride="carousel" style=" width:73% ">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" style="height:600px">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{'/images/restaurants/5cc87b3c187c4828740819.jpg'}}" alt="First slide">
                    <div class="carousel-caption">
                            <h3> <a href="/restaurant-list/the-best-food-1" class="text-white"> The best food</a> </h3>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{'/images/restaurants/5cc88285c696e015943968.jpg'}}" alt="Second slide">
                    <div class="carousel-caption">
                            <h3> <a href="/restaurant-list/au-delice-de-confucius-3" class="text-white"> Au delice de confucius </a> </h3>
                    </div>                
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{'/images/restaurants/empty.jpg'}}" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            
        </div>
    

    <div class="container mt-5">
        <h2>Les restaurants quotidien </h2>
        <div class="row flex ">

            {% for restaurant in restaurants %}
                <div class="col-3 d-flex align-items-stretch mt-4">
                    <div class="card">
                        <div class="card-body">

                            {% if restaurant.filename %}
                                <img src="{{vich_uploader_asset(restaurant, 'imageFile')}}" alt="card-img-top" style="width: 100%; height:100px" >
                            {% else %}
                                <img src="{{'/images/restaurants/empty.jpg'}}" alt="card-img-top" style="width: 100%; height:100px" >
                            {% endif %}

                            <h5 class="card-title">
                                <a href="{{ path('restaurant-list.show',{id: restaurant.id, slug: restaurant.slug} )}} "> {{ restaurant.name}}</a>
                            </h5>

                            <h6 class="card-text"> Address : {{ restaurant.address}} </h6>
                            <h6 class="card-text"> Evaluation : {{ restaurant.evaluation}} </h6>
                            <div class="text-primary" style="font-weight: bold; font-size: 1rem;" > Average Price: {{restaurant.getFormattedPrice}} â‚¬</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    </div>
{% endblock %}